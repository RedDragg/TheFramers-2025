<section class="data-carousel">
  <ul class="scroll-carousel all-data">

    {% comment %} ðŸª„ Checking for the language {% endcomment %}
    {% assign unique_types = [] %}
    {% for type in allEventTypes %}
      {% if lang == 'EN' %}
        {% assign type_name = type.en %}
      {% else %}
        {% assign type_name = type.nl %}
      {% endif %}

      {% if type_name and type_name != "" and type_name != blank %}
        {% unless unique_types contains type_name %}
          {% assign unique_types = unique_types | push: type_name %}

          {% for item in allEvents %}
            {% if lang == 'EN' %}
              {% assign event_type_name = item.event.type_en %}
              {% assign event_title = item.event.title_en 
                | replace: 'Exhibition', '' 
                | replace: 'exhibition', '' 
                | replace: 'Launch', '' 
                | replace: 'launch', '' 
                | replace: 'Debate', '' 
                | replace: 'debate', '' 
                | replace: 'Symposium', '' 
                | replace: 'symposium', '' 
                | replace: 'Public program', '' 
                | replace: 'public program', '' 
                | replace: 'Performance', '' 
                | replace: 'performance', '' 
                | replace: 'Film screening', '' 
                | replace: 'film screening', '' 
                | replace: 'Talk', '' 
                | replace: 'talk', '' 
                | replace: 'Educational program', '' 
                | replace: 'educational program', '' 
                | replace: ':', '' 
                | strip
              %}
            {% else %}
              {% assign event_type_name = item.event.type_nl %}
              {% assign event_title = item.event.title_nl 
                | replace: 'Expositie programma', '' 
                | replace: 'expositie programma', '' 
                | replace: 'Expositie', '' 
                | replace: 'expositie', '' 
                | replace: 'Lancering', '' 
                | replace: 'lancering', '' 
                | replace: 'Debat', '' 
                | replace: 'debat', '' 
                | replace: 'Symposium', '' 
                | replace: 'symposium', '' 
                | replace: 'Publiek programma', '' 
                | replace: 'publiek programma', '' 
                | replace: 'Performance', '' 
                | replace: 'performance', '' 
                | replace: 'Film vertoning', '' 
                | replace: 'film vertoning', '' 
                | replace: 'Lezing', '' 
                | replace: 'lezing', '' 
                | replace: 'Educatief programma', '' 
                | replace: 'educatief programma', '' 
                | replace: ':', '' 
                | strip
              %}
            {% endif %}

            {% if event_type_name == type_name %}
              {% assign type_class = type_name | downcase | replace: " ", "-" | replace: "'", "" | replace: ",", "" %}

              <li class="content-card" tabindex="0">
                <a href="/{{ lang }}/archive/{{ item.event.uuid }}">
                  <div>
                    <strong>{{ event_title }}</strong> 
                    <h2 class="type-label {{ type_class }}">{{ type_name }}</h2>
                  </div>
                  <img src="{{ item.imageUrl }}" alt="{{ event_title }}" class="category-image" loading="lazy">
                </a>
              </li>

            {% endif %}
          {% endfor %}

        {% endunless %}
      {% endif %}
    {% endfor %}
  </ul>
</section>
