{% layout "server/layouts/base.liquid" %}

{% block content %}

  {% if view == 'categories' %}
    {% render '../components/home-page/all-category.liquid' 
    allEvents: allEvents, 
    allArtists: allArtists,
    allEventTypes: allEventTypes,
    title: title,
    lang: lang,
    currentPath: currentPath
    %}
  {% else %}
    {% render '../components/home-page/all-data.liquid' 
      allEvents: allEvents, 
      allArtists: allArtists,
      allEventTypes: allEventTypes,
      title: title,
      lang: lang,
      currentPath: currentPath
    %}
  {% endif %}

{% endblock %}

