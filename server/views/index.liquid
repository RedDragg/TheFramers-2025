{% layout "server/layouts/base.liquid" %}

{% block content %}
<main> 

    <h1>Titel</h1>
    <ul>
    {% assign unique_types = "" | split: "," %}

{% for type in allEventTypes %}
  {% if type.nl and type.nl != "" and type.nl != blank %}
    {% unless unique_types contains type.nl %}
      {% assign unique_types = unique_types | push: type.nl %}
      <li>
        <h2>{{ type.nl }}</h2>
        <ul>
          {% for item in allEvents %}
            {% if item.event.type_nl == type.nl %}
              <li>
                <a href="/archive/:id">
            <strong>{{ item.event.title_nl }}</strong> - {{ item.event.type_nl }} - 
            {% for rel in item.relationships %}
              {% if rel.node == "Person" %}
                {% for artist in allArtists %}
                  {% if rel.uuid == artist.person.uuid %}
                    {{ artist.person.name }}
                  {% endif %}
                {% endfor %}
              {% endif %}
            {% endfor %}
                </a>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </li>
     
      
    {% endunless %}
  {% endif %}
{% endfor %}
</ul>
       
</main>

{% endblock %}

