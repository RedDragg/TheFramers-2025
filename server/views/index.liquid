{% layout "server/layouts/base.liquid" %}



{% comment %} 🎀 HOME PAGE 🎀 {% endcomment %}
{% comment %} ✨ Option to choose between all data or data per category ✨ {% endcomment %}

{% block content %}

  {% if view == 'categories' %}
    {% render '../components/home-page/all-category.liquid' 
    allEvents: allEvents, 
    allArtists: allArtists,
    allEventTypes: allEventTypes,
    title: title,
    lang: lang,
    currentPath: currentPath
    %}
  {% else %}
    {% render '../components/home-page/all-data.liquid' 
      allEvents: allEvents, 
      allArtists: allArtists,
      allEventTypes: allEventTypes,
      title: title,
      lang: lang,
      currentPath: currentPath
    %}
  {% endif %}

{% endblock %}

