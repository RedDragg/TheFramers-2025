<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="icon" href="/images/favicon.ico" type="image/x-icon">

  {% comment %} ⭐️ TITLE  ⭐️{% endcomment %}
  {% assign title = "Theaterfestival Boulevard" | append: " - " | append: view.title %}
  {% if lang == 'nl' %}
    {% assign title = title | append: " - " | append: "Theaterfestival Boulevard" %}
  {% endif %}

  {% block head %}
    <title>{{ title }}</title>
  {% endblock %}

    <link rel="stylesheet" href="/index.css">
    <script src="/index.js" defer></script>

  {% block styles %}{% endblock %}
  {% block scripts %}{% endblock %}
</head>

<body>
{% comment %} ⭐️ NAVIGATION  ⭐️{% endcomment %}
{% render '../components/navigation/navigation.liquid' lang: lang, view: view %}

{% comment %} ⭐️ MAIN CONTENT  ⭐️{% endcomment %}
  {% block content %}{% endblock %}

{% comment %} ⭐️ FOOTER  ⭐️{% endcomment %}
{% comment %} {% render '../components/footer/footer.liquid' lang: lang, view: view %}
 {% endcomment %}

</body>
</html>
