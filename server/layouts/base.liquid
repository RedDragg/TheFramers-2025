<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  {% block head %}
    <title>{{ title }}</title>
  {% endblock %}
  {% if NODE_ENV == "development" %}
    <script type="module" src="http://localhost:5173/@vite/client" defer></script>
    <script type="module" src="http://localhost:5173/client/index.js" defer></script>
  {% else %}
    {% comment %} <link rel="stylesheet" href="/index.css"> {% endcomment %}
    {% comment %} <script src="/index.js" defer></script> {% endcomment %}
  {% endif %}
  {% block styles %}{% endblock %}
  {% block scripts %}{% endblock %}
</head>

<body>


  {% block content %}{% endblock %}

</body>
</html>
